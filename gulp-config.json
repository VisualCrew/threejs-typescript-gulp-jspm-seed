{
	"src": {
		"path": "src/app/",
		"files": {			
			"ts": "./src/**/*.ts",
			"html": "./src/**/*.htm'",
			"css": "./src/**/*.css",
			"other": "./src/**/*!(.ts)",
			"all":	"./src/**/*.*"
		}
		
	},
	"build": {
		"path": ".build/",
		"routes": {
                "/jspm_packages": "jspm_packages"
        }				
	},
	"tsd": {		
        "command": "reinstall",
		"latest": false,
        "config": "./tsd.json"		
	}
}