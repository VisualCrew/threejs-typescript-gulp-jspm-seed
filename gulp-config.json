{
	"src": {
		"path": "app/src/",
		"files": {			
			"ts": "./app/**/*.ts",
			"html": "./app/**/*.htm'",
			"css": "./app/**/*.css",
			"other": "./app/**/*!(.ts)",
			"all":	"./app/**/*.*"
		}
		
	},
	"build": {
